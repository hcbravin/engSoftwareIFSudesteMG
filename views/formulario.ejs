<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Nova Manutenção</title>
    <style>
        body { font-family: sans-serif; margin: 0; }
        /* table { width: 100%; border-collapse: collapse; }
        th, td { border: 1px solid #ccc; padding: 8px; text-align: left; }
        a { text-decoration: none; background-color: #007bff; color: white; padding: 10px 15px; border-radius: 5px; } */
    </style>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>
<body>
    <div class="container-flex mx-2">
        <div class="row">
            <div class="col-12"><h1>Registrar Nova Manutenção</h1></div>
        </div>
        <hr>
        <form action="/novo" method="POST">
            <div class="row justify-content-center">
                <div class="col-12 mb-2 col-sm-6 col-md-4 col-lg-2">
                    <label for="data">Data:</label>
                    <input type="date" id="data" name="data" class="form-control" required>
                </div>
                <div class="col-12 mb-2 col-sm-6 col-md-4 col-lg-2">
                    <label for="quilometragem">Quilometragem:</label>
                    <input type="number" id="quilometragem" name="quilometragem" class="form-control" required>
                </div>
                <div class="col-12 mb-2 col-sm-6 col-md-5">
                    <label for="servico">Serviço Realizado:</label>
                    <input type="text" id="servico" name="servico" class="form-control" required>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 mb-2 col-sm-6 col-md-4 col-lg-3">
                    <label for="codigoPeca">Código da Peça:</label>
                    <input type="text" id="codigoPeca" class="form-control" name="codigoPeca">
                </div>
                <div class="col-12 mb-2 col-sm-6 col-md-4">
                    <label for="nomePeca">Nome da Peça:</label>
                    <input type="text" id="nomePeca" name="nomePeca" class="form-control" readonly style="background-color: #eee;">
                </div>
                <div class="col-12 mb-2 col-sm-6 col-md-4 col-lg-2">
                    <label for="custo">Custo (R$):</label>
                    <input type="number" step="0.01" id="custo" class="form-control" name="custo" required>
                </div>
                
            </div>
            <div class="row justify-content-center">
                <div class="col-12 mb-2 col-sm-6 col-md-9">
                    <label for="observacoes">Observações:</label>
                    <textarea id="observacoes" name="observacoes" class="form-control" rows="3"></textarea>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-12 mb-2 col-sm-6 col-md-9 text-end">
                    <a href="/" class="btn btn-sm btn-success">Lista de Manutenções</a>
                    <button type="submit" class="btn btn-sm btn-primary">Salvar Manutenção</button>
                </div>
            </div>
        </form>
    </div>

    <script>
        // Este script faz a mágica de chamar nossa API mockada!
        document.getElementById('codigoPeca').addEventListener('blur', async (event) => {
            const codigo = event.target.value;
            const nomePecaInput = document.getElementById('nomePeca');

            if (!codigo) {
                nomePecaInput.value = '';
                return;
            }

            try {
                // Chama a rota auxiliar do nosso App Principal
                const response = await fetch(`/api/peca/${codigo}`);
                if (!response.ok) {
                    throw new Error('Peça não encontrada');
                }
                const data = await response.json();
                // Preenche o campo 'Nome da Peça' automaticamente
                nomePecaInput.value = data.nome; 
            } catch (error) {
                nomePecaInput.value = 'Código não encontrado!';
                console.error(error);
            }
        });
    </script>
</body>
</html>